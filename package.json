{
  "name": "predictive-textarea",
  "version": "0.1.0",
  "description": "A rich text input with AI-powered autocomplete content predictions for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint src/**/*.ts*",
    "clean": "rm -rf dist",
    "demo:install": "cd demo && yarn install",
    "demo:dev": "yarn build && cd demo && yarn dev",
    "demo:build": "yarn build && cd demo && yarn build",
    "demo:preview": "cd demo && yarn preview",
    "demo": "yarn demo:install && yarn demo:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare-version": "ts-node --project tsconfig.cli.json scripts/release-branch.ts prepare-version",
    "create-release": "ts-node --project tsconfig.cli.json scripts/release-branch.ts create-release"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "textarea",
    "predictive",
    "autocomplete",
    "ai",
    "content-prediction"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@radix-ui/react-slot": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "quick-lru": "^7.0.1",
    "trie-search": "^2.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-perfectionist": "^4.11.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-yenz": "^1.2.0",
    "execa": "^9.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "octokit": "^4.1.3",
    "ora": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "10.9.2",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0"
